<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape>
            <solid android:color="#55000000"/> <!-- Color de la sombra -->
            <corners android:radius="24dp"/> <!-- Radio de las esquinas de la sombra -->
        </shape>
    </item>

    <!-- Fondo principal -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#222222"
                android:endColor="#444444"
                android:type="linear" />
            <corners android:radius="20dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Color del borde -->
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</layer-list>
