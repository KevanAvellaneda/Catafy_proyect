<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#853455"
    tools:context=".DetailVinedosActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="288dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="342dp">

                    <ImageView
                        android:id="@+id/vinedoImg"
                        android:layout_width="425dp"
                        android:layout_height="280dp"
                        android:src="@drawable/laredonda"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.428"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:background="#70000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Dirección y marcador -->
                    <LinearLayout
                        android:id="@+id/ubicacionD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:theme="?attr/actionBarTheme"
                        android:clickable="true"
                        app:layout_constraintBottom_toBottomOf="@id/view2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/view2"
                        android:layout_margin="20dp">

                        <ImageView
                            android:id="@+id/imgUbicacion"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/marcador" />

                        <TextView
                            android:id="@+id/addressText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="20dp"
                            android:text="CARR. SAN JUAN DEL RÍO A EZEQUIEL MONTES KM 33.5"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viñedo La Redonda"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/view2"
                        android:layout_marginStart="20dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--  Imágen y horario -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:id="@+id/imgHorario"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="20dp"/>

                    <TextView
                        android:id="@+id/horarioTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horario: "
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ratingBarOpinion"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </LinearLayout>
                <!--  Imágen y horario -->

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Descripción"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:text="Explora la magia de Viñedo La Redonda en Querétaro, México. Rodeado de exuberantes viñedos, este destino cautivador te invita a degustar vinos premiados y sumergirte en la belleza de la elaboración vinícola. Disfruta de experiencias únicas en un entorno sereno y encantador."
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button5"
                        style="@android:style/Widget.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:background="@color/backopcion"
                        android:text="Reservar"
                        android:textColor="@color/wine"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/botonRestar"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/backopcion"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/wine"/>

                    <TextView
                        android:id="@+id/textcont"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/backopcion"
                        android:text="0"
                        android:textColor="@color/wine"
                        android:padding="6dp"/>

                    <Button
                        android:id="@+id/botonSumar"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="8dp"
                        android:text="+"
                        android:background="@color/backopcion"
                        android:textColor="@color/wine"/>
                </TableRow>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/comentariosText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Opiniones sobre el lugar"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/calificacionLugarScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0.0"
                            android:layout_gravity="center_horizontal"
                            android:textSize="50sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>

                        <RatingBar
                            android:id="@+id/calificacionLugarBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="0"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:progressTint="@color/white"
                            android:stepSize="1"/>

                        <TextView
                            android:id="@+id/calificacionLugarTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20sp"/>

                        <!-- RecyclerView para los comentarios -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewComentarios"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginHorizontal="20dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            />

                        <TextView
                            android:id="@+id/noOpinionMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No hay ninguna opinión todavía sobre este evento. Sé el primero en escribir una."
                            android:visibility="gone"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_marginBottom="20dp"
                            android:layout_marginHorizontal="20dp"/>

                        <Button
                            android:id="@+id/verMasComentariosButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver más comentarios"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:layout_gravity="end"
                            android:layout_margin="20dp"/>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="#7E9A9A9A" />



                        <TextView
                            android:id="@+id/textCalificar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Califícanos"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:layout_margin="20dp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/editTextNombreUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre de Usuario"
                            android:inputType="text"
                            android:visibility="gone" />

                        <RatingBar
                            android:id="@+id/ratingBarOpinion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:isIndicator="false"
                            android:progressTint="@color/white"
                            android:numStars="5"
                            android:stepSize="1"
                            android:rating="0" />


                        <EditText
                            android:id="@+id/editTextComentario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Comparte detalles sobre tu experiencia en este lugar"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:background="@drawable/edittext_bg"
                            android:padding="12dp"
                            android:layout_marginHorizontal="20dp"/>


                        <Button
                            android:id="@+id/botonEnviarOpinion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enviar opinión"
                            android:background="@null"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="right"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
