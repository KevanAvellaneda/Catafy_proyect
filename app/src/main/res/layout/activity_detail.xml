<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#853455"
    tools:context=".DetailVinedosActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <!-- Contenedor Principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen del Vinedo -->
            <ImageView
                android:id="@+id/vinedoImg"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/laredonda"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Título del Vinedo -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cargando..."
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>


            <!-- Dirección y marcador -->
            <LinearLayout
                android:id="@+id/ubicacionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:theme="?attr/actionBarTheme"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imgUbicacion"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/marcador" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="20dp"
                    android:text="CARGANDO......"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>


            <!-- Horario del Vinedo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgHorario"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Icono de Horario"
                    android:src="@drawable/marcador"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/horarioTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Horario: 10:00 AM - 7:00 PM"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </LinearLayout>


            <!-- Descripción del Vinedo -->
            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla convallis libero sit amet est mollis, ut maximus arcu ultrices. Sed nec libero nunc. Duis auctor massa eu ante rhoncus, sed ultricies tortor aliquam."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>


            <!-- Reserva -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/botonReservar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reservar"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/botonRestar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textContador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/botonSumar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Opiniones -->
            <TextView
                android:id="@+id/comentariosText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Opiniones sobre el lugar"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/calificacionLugarScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <!-- RatingBar para calificación del lugar -->
            <RatingBar
                android:id="@+id/calificacionLugarBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="0"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:stepSize="1"
                android:progressTint="@android:color/white"
                />


            <TextView
                android:id="@+id/calificacionLugarTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 opiniones"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <!-- RecyclerView para comentarios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewComentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginHorizontal="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <!-- Mensaje si no hay opiniones -->
            <TextView
                android:id="@+id/noOpinionMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay ninguna opinión todavía sobre este evento. Sé el primero en escribir una."
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"/>

            <!-- Botón Ver Más Comentarios -->
            <Button
                android:id="@+id/verMasComentariosButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver más comentarios"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:layout_margin="20dp"/>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="#7E9A9A9A" />

            <!-- Calificación -->
            <TextView
                android:id="@+id/textCalificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Califícanos"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:layout_margin="20dp"
                android:textStyle="bold"/>

            <!-- EditText para nombre de usuario -->
            <EditText
                android:id="@+id/editTextNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nombre de Usuario"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:backgroundTint="@android:color/white"
                android:visibility="gone"/>

            <!-- RatingBar para calificación -->
            <RatingBar
                android:id="@+id/ratingBarOpinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:isIndicator="false"
                android:progressTint="@color/white"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0" />

            <!-- EditText para comentario -->
            <EditText
                android:id="@+id/editTextComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comparte detalles sobre tu experiencia en este lugar"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edittext_bg"
                android:layout_marginHorizontal="20dp"/>

            <!-- Botón Enviar Opinión -->
            <Button
                android:id="@+id/botonEnviarOpinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar opinión"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"
                android:layout_gravity="end"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>