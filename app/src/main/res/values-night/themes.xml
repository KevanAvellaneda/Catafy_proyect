<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Winestastic" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimaryDark">#853455</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="DialogBasicCustomStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowBackground">@drawable/background_map</item>
        <item name="android:textColor">@color/wine</item>


        <item name="android:windowMinWidthMajor">200dp</item>
        <item name="android:windowMinWidthMinor">350dp</item>


    </style>


    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>



    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

</resources>